<UserControl
    x:Class="MyLecture.Controls.CopyPasteMovePopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyLecture.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel x:Name="ButtonPanel" Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                Background="#FF00C5FF">
        
        <Button x:Name="CopySelectionButton" BorderThickness="0,0,1,0" 
                BorderBrush="#FF0080A6" Click="CopySelectionButton_Click">
            <SymbolIcon Symbol="Copy" 
                        Foreground="White"/>
        </Button>

        <Button x:Name="MoveSelectionButton" BorderThickness="1,0" 
                BorderBrush="#FF0080A6" Click="MoveSelectionButton_Click">
            <SymbolIcon Foreground="White" 
                        Symbol="SetLockScreen"/>
        </Button>
        
        <Button x:Name="ClearSelectionButton" BorderThickness="1,0,0,0" 
                BorderBrush="#FF0080A6" Click="ClearSelectionButton_Click">
            <SymbolIcon Symbol="ClearSelection" 
                        Foreground="White"/>
        </Button>
    </StackPanel>
</UserControl>
